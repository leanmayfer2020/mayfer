{{> header_admin}}

<section class="bgwhite p-b-60">
	<div class="container">
		<h3 class="titleAdmin">LISTADO DE ENVIOS</h3>
			<div class="col-md-12 table" style="padding:0px;">
				<a href="{{config.adminPath}}/envios/nuevo" value="toggle" class="btn btn-success" style="width: 100%;">AGREGAR NUEVO ENVIO</a>
			</div>
			<div class="row table">
				
				{{#each deliveries}}
					<div class="col-md-12 line-table">
						<div class="col-sm-6 div_column-2">
							<div class="block2-txt p-t-20">{{this.city}}</div>
						</div>
						<div class="col-sm-2 div_column-2">
							<div class="block2-txt p-t-20">{{this.cost}}</div>
						</div>
						<div class="col-sm-2 div_column-4 buttonEdition">
                            <a href="{{../config.adminPath}}/envios/editar/{{this._id}}" value="toggle" class="btn btn-info">Editar</a>
                        </div>

                        <div class="col-sm-2 div_column-5 buttonEdition">
                            <a href="{{../config.adminPath}}/envios/eliminar/{{this._id}}" value="toggle" class="btn btn-danger">Eliminar</a>
                        </div>
					</div>
				{{/each}}
			</div>
	</div>
</section>

{{> footer_admin}}