<section class="newproduct bgwhite p-t-45 p-b-105">
	<div class="container">
		<div class="sec-title p-b-60">
			<h3 class="m-text5 t-center">
				Nuevos Productos
			</h3>
		</div>


		<!-- Slide2 -->
		<div class="wrap-slick2">
			<div class="slick2">
				{{#each featured}}
					<div class="item-slick2 p-l-15 p-r-15">
						<!-- Block2 -->
						<div class="block2">
							<div class="block2-img wrap-pic-w of-hidden pos-relative block2-labelnew" style="width: 270px; height: 270px;">
								<img src="{{this.images.0.url}}" alt="{{this.description}}" onerror="this.src='{{../config.sourcePath}}/brands/{{../brand}}/images/products/imagen_no_disponible.png'" data-url="{{this.main_image}}">

								<div class="block2-overlay trans-0-4">
									<a href="#" class="block2-btn-addwishlist hov-pointer trans-0-4">
										<i class="icon-wishlist icon_heart_alt" aria-hidden="true"></i>
										<i class="icon-wishlist icon_heart dis-none" aria-hidden="true"></i>
									</a>

									<div class="block2-btn-addcart w-size1 trans-0-4">
										<!-- Button -->
										<a href="{{../config.sitePath}}/producto/{{this.seo_link}}/{{this.salable_id}}" class="flex-c-m size1 bg4 bo-rad-23 hov1 s-text1 trans-0-4">
											Ver detalle
										</a>
									</div>
								</div>
							</div>

							<div class="block2-txt p-t-20">
								<a href="{{../config.sitePath}}/producto/{{this.seo_link}}/{{this.salable_id}}" class="block2-name dis-block s-text3 p-b-5">
									{{this.description}}
								</a>
								{{#if this.web_price}}
									<span class="block2-price m-text6 p-r-5">
										${{formatPriceNumber this.web_price}}
									</span>
								{{/if}}
							</div>
						</div>
					</div>
				{{/each}}
			</div>
		</div>

	</div>
</section>