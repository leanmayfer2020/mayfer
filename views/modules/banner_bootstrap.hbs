<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
	<ol class="carousel-indicators">
		<li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
		<li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
		<!-- <li data-target="#carouselExampleIndicators" data-slide-to="2"></li> -->
	</ol>
  	{{#if_eq device "mobile"}}
  		<div class="carousel-inner">
			<div class="carousel-item active">
				<img class="d-block w-100" src="{{config.sourcePath}}/brands/{{brand}}/images/slider_bootstrap/banner1.jpg" alt="{{brand}}">
			</div>
			<div class="carousel-item">
				<img class="d-block w-100" src="{{config.sourcePath}}/brands/{{brand}}/images/slider_bootstrap/banner4.jpg" alt="{{brand}}">
			</div>
		</div>
  	{{else}}
		<div class="carousel-inner">
			<div class="carousel-item active">
				<img class="d-block w-100" src="{{config.sourcePath}}/brands/{{brand}}/images/slider_bootstrap/banner2.jpg" alt="{{brand}}">
			</div>
			<div class="carousel-item">
				<img class="d-block w-100" src="{{config.sourcePath}}/brands/{{brand}}/images/slider_bootstrap/banner3.jpg" alt="{{brand}}">
			</div>
		</div>
  	{{/if_eq}}
  
	<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
		<span class="carousel-control-prev-icon" aria-hidden="true"></span>
		<span class="sr-only">Anterior</span>
	</a>
	<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
		<span class="carousel-control-next-icon" aria-hidden="true"></span>
		<span class="sr-only">Siguiente</span>
	</a>
</div>