	<!-- Cart -->
	<section class="cart bgwhite p-t-30 p-b-100">
		<div class="container">
			<!-- Cart item -->
			<div class="container-table-cart pos-relative">
				<div class="wrap-table-shopping-cart bgwhite">
					<table class="table-shopping-cart">
						<tr class="table-head">
							<th class="column-1"></th>
							<th class="column-2">Producto</th>
							<th class="column-3">Precio</th>
							<th class="column-4 p-l-70">Cantidad</th>
							<th class="column-5" colspan="2">Total</th>
						</tr>
						{{> article}}
					</table>
				</div>
			</div>

			<div class="flex-w flex-sb-m p-t-25 p-b-25 bo8 p-l-35 p-r-60 p-lr-15-sm">
				<div class="flex-w flex-m w-full-sm">
					<div class="size11 bo4 m-r-10">
						<input class="sizefull s-text7 p-l-22 p-r-22" type="text" name="coupon-code" placeholder="Tenés un cupón de descuento?">
					</div>

					<div class="size12 trans-0-4 m-t-10 m-b-10 m-r-10">
						<!-- Button -->
						<button class="flex-c-m sizefull bg1 bo-rad-23 hov1 s-text1 trans-0-4">
							Aplicar
						</button>
					</div>
				</div>

				<div class="size10 trans-0-4 m-t-10 m-b-10 total-cart">
					<span class="">TOTAL $<div id="total_cart" style="display: inline-block;">{{formatPriceNumber cart.total_price}}</div></span>
				</div>
			</div>

			<div class="size10 trans-0-4 m-t-10 m-b-10 text-right" style="display: block; width: 100%">
					<!-- Button -->
					<a href="{{config.billingPath}}" class="flex-c-m sizefull bg1 bo-rad-23 hov1 s-text1 trans-0-4" style="display: inline-block;width: 180px;padding: 10px;text-align: center;">
						Continuar
					</a>
				</div>
		</div>
	</section>