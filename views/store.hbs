{{> header}}

	{{#if_eq result 'ok'}}
        <div class="alert alert-success" style="width: 70%;margin: 0 auto; margin-top: 50px;">
		    <a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">×</a>
		    <strong>Perfecto!</strong> Tu mensaje se envió correctamente, en breve nos estaremos poniendo en contacto.
		</div>
    {{/if_eq}}

    {{#if_eq result 'error'}}
        <div class="alert alert-danger" style="width: 70%;margin: 0 auto; margin-top: 50px;">
		    <a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">×</a>
		    <strong>Error!</strong> Tu mensaje no pudo ser enviado, por favor intentelo nuevamente.
		</div>
    {{/if_eq}}


	<section class="bgwhite p-t-20 p-b-60">
		<div class="container">
			<div class="row">
				
				{{> stores }}

			</div>
		</div>
	</section>


	<!-- Back to top -->
	<div class="btn-back-to-top bg0-hov" id="myBtn">
		<span class="symbol-btn-back-to-top">
			<i class="fa fa-angle-double-up" aria-hidden="true"></i>
		</span>
	</div>

	<!-- Container Selection -->
	<div id="dropDownSelect1"></div>
	<div id="dropDownSelect2"></div>


{{> footer}}